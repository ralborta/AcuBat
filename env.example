# Configuración de la aplicación
APP_NAME=AcuBat Pricing Platform
DEBUG=true
VERSION=1.0.0
ENV=development

# Base de datos PostgreSQL
DATABASE_URL=postgresql://acubat_user:acubat_password@localhost:5432/acubat_pricing

# Seguridad
SECRET_KEY=your-secret-key-here-change-in-production
API_SECRET=your-api-secret-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Almacenamiento S3
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=acubat-pricing
S3_SECURE=true

# API Keys
API_KEY_HEADER=x-api-key
API_KEY_PREFIX=acubat_

# Límites
MAX_FILE_SIZE=52428800
MAX_UPLOAD_FILES=10

# Logging
LOG_LEVEL=INFO

# QA Gates
QA_GLOBAL_THRESHOLD=0.08
QA_SKU_THRESHOLD=0.15
AUTO_PUBLISH=false
